<!DOCTYPE html>
<html>
<head>
  <title>Peta Sebaran Alat</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script src="https://unpkg.com/papaparse@5.3.2/papaparse.min.js"></script>
</head>
<body style="margin:0; padding:0;">
  <div id="map" style="width: 100%; height: 100vh;"></div>

  <script>
    var map = L.map('map').setView([-2.5, 118], 5); // Indonesia
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: 'Â© OpenStreetMap contributors'
    }).addTo(map);

    // Ganti dengan link CSV publik dari Google Sheets
    var sheetUrl = "https://docs.google.com/spreadsheets/d/e/2PACX-1vTCuQ09D6Y0EObPuo3zTwY7h1hPGXgYPQ6XsErIfmIwiWi5qFezvOZRch3kbNVmGfagBBUaaog8cq_B/pub?gid=0&single=true&output=csv";

    Papa.parse(sheetUrl, {
      download: true,
      header: true,
      complete: function(results) {
        results.data.forEach(function(row) {
          if(row.latitude && row.longitude) {
            L.marker([parseFloat(row.latitude), parseFloat(row.longitude)])
              .addTo(map)
              .bindPopup(`
                <b>${row.nama_alat || "Tanpa Nama"}</b><br>
                Jenis: ${row.jenis || "-"}<br>
                Status: ${row.status || "-"}
              `);
          }
        });
      }
    });
  </script>
</body>
</html>
